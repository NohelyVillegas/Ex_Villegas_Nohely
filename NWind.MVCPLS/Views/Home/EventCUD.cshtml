@model Entities.Eventos
@{
    ViewBag.Title = Model.EventoID > 0 ? "Editar Evento" : "Crear Nuevo Evento";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("CUD", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.EventoID)

    <div class="form-group">
        <label for="Nombre">Nombre:</label>
        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Nombre del evento", required = "required" })
    </div>

    <div class="form-group">
        <label for="Lugar">Lugar:</label>
        @Html.TextBoxFor(m => m.Lugar, new { @class = "form-control", placeholder = "Lugar del evento", required = "required" })
    </div>

    <div class="form-group">
        <label for="FechaInicio">Fecha Inicio:</label>
        @Html.TextBoxFor(m => m.FechaInicio, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label for="FechaFin">Fecha Fin:</label>
        @Html.TextBoxFor(m => m.FechaFin, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="Descripcion">Descripción:</label>
        @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", rows = 4, placeholder = "Descripción del evento" })
    </div>

    <button type="submit" name="CreateBtn" value="true" class="btn btn-primary">Guardar</button>
    if (Model.EventoID > 0)
    {
        <button type="submit" name="UpdateBtn" value="true" class="btn btn-warning">Actualizar</button>
    }
    <a href="@Url.Action("List", "Home")" class="btn btn-secondary">Cancelar</a>
}
